<!DOCTYPE html>
<html>
  <head>
    <title>DojoForum</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header id="header_nav">
      <!-- navbar //start -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to "Dojo Forum", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <!-- brand side nav//start -->
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to "Feeds", feeds_posts_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "All Posts", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "New Post", new_post_path, class: "nav-link" %>
            </li>
          </ul><!-- brand side nav //end -->
          
          <!-- user side nav//start -->
          <ul class="navbar-nav">
            <% if current_user %>
              <% if current_user.is_admin %>
                <span class="navbar-text">
                  <%= current_user.email %> (Admin)
                </span>
                <li class="nav-item">
                  <%= link_to "Admin Panel", admin_categories_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Profile", user_path(current_user), class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Log out", destroy_user_session_path, class: "nav-link" %>
                </li>
              <% else %>
                <span class="navbar-text">
                  <%= current_user.email %>
                </span>
                <li class="nav-item">
                  <%= link_to "Profile", user_path(current_user), class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Log out", destroy_user_session_path, class: "nav-link" %>
                </li>
              <% end %>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul><!-- user side nav//end -->

        </div>
      </nav>
      <!-- navbar //end -->
    </header>

    <%= yield %>
  </body>
</html>
