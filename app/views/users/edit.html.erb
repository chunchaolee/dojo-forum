<div class="user-edit">
  <div class="container-fluid">
    
    <!-- form //start -->
    <div class="user-form form-group">
      
      <%= form_for @user do |f| %>

        <%= f.text_field :name, class: "form-control", placeholder: "Enter User Name"%><br />

        <%= f.text_area :description, class: "form-control", placeholder: "Enter Description", rows: "8" %><br />

        <!-- file //strat -->
        <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
        <%= f.file_field :avatar %><br /><br />
        <!-- file //end -->

        <!-- buttons //start -->
        <div>
          <%= f.submit class: "btn btn-outline-secondary"%>
        </div>
        <!-- buttons //end -->

      <% end %>

    </div>
    <!-- form //end -->

  </div>
</div>